<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.ForgotFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="587dp"
            android:layout_height="309dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/closet"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-88dp" />

        <EditText
            android:id="@+id/etEmailLogin"
            android:layout_width="272dp"
            android:layout_height="41dp"
            android:layout_marginEnd="68dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="292dp" />

        <EditText
            android:id="@+id/etPasswordLogin"
            android:layout_width="279dp"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@+id/etEmailLogin"
            app:layout_constraintTop_toBottomOf="@+id/etEmailLogin" />

        <Button
            android:id="@+id/btnLoginLogin"
            android:layout_width="128dp"
            android:layout_height="56dp"
            android:backgroundTint="#00CC88A1"
            android:text="Login"
            android:textColor="#AF8282"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="492dp" />

        <Button
            android:id="@+id/btnSignupLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#00D6CBCF"
            android:text="Signup"
            android:textColor="#C8A0AE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnForgotLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#00D5D0D1"
            android:text="Forgot Password"
            android:textColor="#C194A4"
            android:textColorHighlight="#D81B60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>