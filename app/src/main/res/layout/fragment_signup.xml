<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F5F5"
    tools:context=".LoginSignup.ForgotFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00DDD4D4"
        android:backgroundTint="#F6EBEB">

        <EditText
            android:id="@+id/etEmailSignup"
            android:layout_width="225dp"
            android:layout_height="44dp"
            android:background="#F44336"
            android:backgroundTint="#E5DFE6"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#E040FB"
            android:textColorHighlight="#A357B1"
            android:textColorHint="#92639A"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="295dp" />

        <EditText
            android:id="@+id/etPasswordSignup"
            android:layout_width="224dp"
            android:layout_height="39dp"
            android:background="#E4DBE6"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#B87ABF"
            android:textColorHighlight="#676078"
            android:textColorHint="#825C88"
            android:textColorLink="#E040FB"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="356dp" />

        <Button
            android:id="@+id/btnSignupSignup"
            android:layout_width="110dp"
            android:layout_height="37dp"
            android:backgroundTint="#EDE9ED"
            android:text="Sign up"
            android:textColor="#443363"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#00806A6A"
            app:cornerRadius="7dp"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="476dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="406dp"
            android:layout_height="289dp"
            android:src="@drawable/closetlogo"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="2dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>